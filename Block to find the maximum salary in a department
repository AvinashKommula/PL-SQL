DECLARE
CURSOR SAL_MAX IS 
SELECT DEPARTMENT_ID, MAX(SALARY) AS MAX_SALARY from EMPLOYEES GROUP BY DEPARTMENT_ID ORDER BY MAX_SALARY DESC;

V_SALARY EMPLOYEES.SALARY%TYPE;
V_DEPAERMENT_ID EMPLOYEES.DEPARTMENT_ID%TYPE;

BEGIN
    FOR rec in SAL_MAX LOOP
    V_SALARY:= rec.MAX_SALARY;
    V_DEPAERMENT_ID:=rec.DEPARTMENT_ID;
    DBMS_OUTPUT.PUT_LINE('MAX SALARY OF ' ||V_DEPAERMENT_ID || ' IS ' || V_SALARY );
    END LOOP;
END;
